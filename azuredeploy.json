{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "string",
            "defaultValue": "[uniquestring(resourceGroup().id)]",
            "metadata": {
                "description": "Resource Name"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "contentZipUri": {
            "type":"string",
            "defaultValue": "",
            "metadata": {
                "description": "Uri to a zip file containing a static web page that should be extracted and uploaded to azure static web"
            }
        },
        "gitHtmlContentUri": {
            "type": "string",
            "defaultValue": "https://github.com/panesofglass/azure-arm-static-webpage.git",
            "metadata": {
                "description": "Uri to a github project that contains a dist folder with and index.html and other content that should be deployed"
            }
        }
    },
    "variables": {
        "storageAccountName": "[toLower(parameters('baseName'))]",
        "aciName": "[concat(parameters('baseName'), '-bootstrap')]",
        "containerName": "createweb",
        "image": "microsoft/azure-cli",
        "cpuCores": "1.0",
        "memoryInGb": "1.5"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "supportsHttpsTrafficOnly": true
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "name": "[variables('aciName')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ],
            "properties": {
                "osType": "Linux",
                "restartPolicy": "Never",
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "[if(greater(length(parameters('contentZipUri')),0), '/mnt/github/runzip.sh','/mnt/github/run.sh')]"
                            ],
                            "volumeMounts": [
                                {
                                    "name": "git",
                                    "mountPath": "/mnt/github"
                                },
                                {
                                    "name": "content",
                                    "mountPath": "/mnt/content"
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('storageAccountName'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('storageAccountName')]"
                                },
                                {
                                    "name": "content",
                                    "value": "[parameters('contentZipUri')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                ],
                "volumes": [
                    {
                        "name": "git",
                        "gitRepo": {
                            "directory": ".",
                            "repository": "https://github.com/panesofglass/azure-arm-static-webpage.git"
                        }
                    },
                    {
                        "name": "content",
                        "gitRepo": {
                            "directory": ".",
                            "repository": "[parameters('gitHtmlContentUri')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "WebUri": {
            "value": "[reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2018-07-01').primaryEndpoints.web]",
            "type": "string"
        }
    }
}