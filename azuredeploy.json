{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "string",
            "defaultValue": "[uniquestring(resourceGroup().id)]",
            "metadata": {
                "description": "Resource Name"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "contentZipUri": {
            "type":"string",
            "defaultValue": "",
            "metadata": {
                "description": "Uri to a zip file containing a static web page that should be extracted and uploaded to azure static web"
            }
        }
    },
    "variables": {
        "storageAccountName": "[toLower(parameters('baseName'))]",
        "aciName": "[concat(parameters('baseName'), '-bootstrap')]",
        "containerName": "bootstrap",
        "image": "mcr.microsoft.com/azure-cli",
        "cpuCores": "1.0",
        "memoryInGb": "1.5"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "supportsHttpsTrafficOnly": true
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "name": "[variables('aciName')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ],
            "properties": {
                "osType": "Linux",
                "restartPolicy": "Never",
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "/bin/sh",
                                "-c",
                                "[concat('az extension add -n storage-preview -y && az storage blob service-properties update --account-name ', variables('storageAccountName'), ' --static-website --404-document error.html --index-document index.html && wget --no-check-certificate ', parameters('contentZipUri'), ' -O content.zip && echo \"mkdir dist\" && mkdir dist && unzip content.zip -d dist && az storage blob upload-batch -s dist -d \"\\$web\"')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('storageAccountName'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('storageAccountName')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "WebUri": {
            "value": "[reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2018-07-01').primaryEndpoints.web]",
            "type": "string"
        }
    }
}